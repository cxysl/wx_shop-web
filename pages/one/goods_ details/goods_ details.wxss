/* pages/one/goods_ details/goods_ details.wxss */
#main{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 10rpx;
  box-sizing: border-box;
}


.lun{
   /* height: 100%; */
   width: 100%;
}
swiper{
  width: 100%;
  height: 500rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}

#goods{
  width: 100%;
  padding-top: 20rpx;
  text-align: left;
}
 /* 描述信息 */
.font1{  
  text-align: left;
  display: block;
  font: normal bold 36rpx "微软雅黑";
}
/* 商品售价 */
.price{
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: block;
  text-align: right;
  margin-right: 50rpx;
  color:rgb(255, 0, 0);
}

.hr1{
  width: 100%;
  height: 4rpx;
  background-color: gainsboro;
  margin: 20rpx 0;
}
/* 商品标签块 */
.goodLabel{
  width: 100%;
  margin-left: 20rpx;
  margin: 10rpx 0;
}
/* 商品标签字 */
.label{
  padding: 10rpx 20rpx;
  text-align: center;
  border: 2rpx red solid;
  margin-right: 20rpx;
  height: 30rpx;
  font: normal bold 24rpx "微软雅黑";
  color:red;
}
.xxx{
  font: normal bold 30rpx "微软雅黑";
  margin-right: 20rpx;
}
/* 物流 */
.go{
  /* color:#C3C3C3; */
  font: normal bold 25rpx "微软雅黑";
}
.left{
  display: block;
  float: left;
}
.right{
  display: block;
  float: right;
}
#foot{
  position:fixed;
  width:100%;
  bottom:0px;
	display:flex;
  height: 150rpx;
  line-height: 150rpx;
  border:1rpx gainsboro solid;
}
.talke{
  width: 20%;
  height: 150rpx;
  padding-top: 20rpx;
  text-align: center;
  color: gainsboro;
}

.shoppingcar{
  width: 40%;
  color: white;
  padding-top: 50rpx;
  font: normal bold 40rpx "微软雅黑";
  background-color: orange;
  text-align: center;
}
.buy{
  width: 40%;
  height: 150rpx;
  padding-top: 50rpx;
  color: white;
  font: normal bold 40rpx "微软雅黑";
  background-color: red;
  text-align: center;
}